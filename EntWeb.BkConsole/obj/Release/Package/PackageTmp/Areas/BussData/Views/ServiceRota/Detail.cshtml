@using EntFrm.Business.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    ServiceRota info = (ServiceRota)ViewBag.StackHolder;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

<form class="form-horizontal">
    <div class="wrapper-content">
        <div class="panel-body" style="padding-top:0px;">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">

                    <div class="form-group">
                        <label class="col-lg-3 control-label">编号：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="RotaNo" id="RotaNo"  value="@info.sRotaNo" readonly placeholder="编号" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">业务：</label>
                        <div class="col-lg-8"> 
                            <input type="text" class="form-control" name="ServiceNo" id="ServiceNo" value="@PageHelper.getServiceInfoNameByNo(info.sServiceNo)" placeholder="医生编号" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">类型：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="RotaType" id="RotaType" value="@PublicHelper.GetRotaType(info.iRotaType)" placeholder="类型" />
                        </div>
                    </div>


                    <div class="clearfix f-hafl">
                        <div class="col-hafl">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">周一：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="WeekDay1" id="WeekDay1" value="@PublicHelper.GetWorkTimeType(info.iWeekDay1)" placeholder="周一" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">周三：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input type="text" class="form-control" name="WeekDay3" id="WeekDay3" value="@PublicHelper.GetWorkTimeType(info.iWeekDay3)" placeholder="周三" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">周五：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input type="text" class="form-control" name="WeekDay5" id="WeekDay5" value="@PublicHelper.GetWorkTimeType(info.iWeekDay5)" placeholder="周五" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">周日：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input type="text" class="form-control" name="WeekDay7" id="WeekDay7" value="@PublicHelper.GetWorkTimeType(info.iWeekDay7)" placeholder="周日" />
                                </div>
                            </div>
                        </div>

                        <div class="col-hafl">
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">周二：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="WeekDay2" id="WeekDay2" value="@PublicHelper.GetWorkTimeType(info.iWeekDay2)" placeholder="周二" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">周四：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input type="text" class="form-control" name="WeekDay4" id="WeekDay4" value="@PublicHelper.GetWorkTimeType(info.iWeekDay4)" placeholder="周四" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">周六：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input type="text" class="form-control" name="WeekDay6" id="WeekDay6" value="@PublicHelper.GetWorkTimeType(info.iWeekDay6)" placeholder="周六" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">挂号费：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input type="text" class="form-control" name="RegisteFees" id="RegisteFees" value="@info.dRegisteFees" placeholder="10.0" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">备注：</label>
                        <div class="col-lg-8">
                            <textarea type="text" class="form-control" name="Comments" id="Comments" rows="5">@info.sComments</textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                        <div class="form-group m20">
                            <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i> 返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>