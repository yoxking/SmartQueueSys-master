@using EntFrm.Business.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    VoiceInfo info = (VoiceInfo)ViewBag.StackHolder;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

@using (Ajax.BeginForm("Save", null, new AjaxOptions()
{
    HttpMethod = "Post",
    OnBegin = "SubAjax.Loading",
    OnComplete = "SubAjax.Complate",
    OnFailure = "SubAjax.Failure",
    OnSuccess = "SubAjax.Success"
},
                                                new { @class = "form-horizontal dig-from", @role = "form" }))
{
    <div class="wrapper-content">
        <div class="panel-body" style="padding-top:0px;">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">

                    <div class="form-group">
                        <label class="col-lg-3 control-label">编号：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="TtsNo" id="TtsNo"  readonly value="@info.sTtsNo" placeholder="编号" />
                        </div>
                    </div>

                    <div class="clearfix f-hafl">
                        <div class="col-hafl">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">语音名称：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="TtsName" id="TtsName" value="@info.sTtsName" placeholder="语音名称" /> 
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">音量：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="Volume" id="Volume" value="@info.iVolume" placeholder="声音大小" />
                                </div>
                            </div>
                        </div>

                        <div class="col-hafl">
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">语音：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <select name="Voice" id="Voice" class="form-control" datatype="*" nullmsg="名称">
                                        <option value="00000000">请选择语音</option> 
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">速度：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input class="form-control" name="Rate" id="Rate" value="@info.iRate" placeholder="速度" />
                                </div>
                            </div>
                        </div>
                    </div> 
                        <div class="form-group">
                            <label class="col-lg-3 control-label">语音格式(叫号)：</label>
                            <div class="col-lg-8">
                                <textarea class="form-control" name="FormatCalling" id="FormatCalling"  rows="2">@info.sFormatCalling</textarea>
                            </div>
                        </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">语音格式(等候)：</label>
                        <div class="col-lg-8">
                            <textarea class="form-control" name="FormatWaiting" id="FormatWaiting" rows="2">@info.sFormatWaiting</textarea>
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">备注：</label>
                            <div class="col-lg-8">
                                <textarea type="text" class="form-control" name="Comments" id="Comments" rows="5">@info.sComments</textarea>
                            </div>
                        </div>

                        <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                            <div class="form-group m20">
                                <button class="btn btn-primary btn-save" type="submit"><i class="fa fa-check"></i> <span>保存</span></button>
                                <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i> 返回</button>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
}

