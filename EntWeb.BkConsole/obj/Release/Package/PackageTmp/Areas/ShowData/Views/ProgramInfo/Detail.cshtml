@using EntFrm.Business.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    DsProgramInfo info = (DsProgramInfo)ViewBag.StackHolder;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

<form class="form-horizontal">
    <div class="wrapper-content">
        <div class="panel-body" style="padding-top:0px;">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">

                    <div class="form-group">
                        <label class="col-lg-3 control-label">节目编号：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="ProgmNo" id="ProgmNo" readonly value="@info.sProgmNo" placeholder="编号" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">节目名称：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="ProgmName" id="ProgmName" value="@info.sProgmName" placeholder="节目名称" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">节目类型：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="PClassNo" id="PClassNo" placeholder="本地地址" value="@PageHelper.getProgramClassNameByNo(info.sPClassNo)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">是否模板：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="IsTemplate" id="IsTemplate"   value="@(info.iIsTemplate==0?"普通节目":"模板节目")" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">本地地址：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="PFilePath" id="PFilePath" placeholder="本地地址" value="@info.sPFilePath" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">在线地址：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="PWebUrl" id="PWebUrl" placeholder="在线地址" value="@info.sPWebUrl" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">分辨率：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="Resolution" id="Resolution" placeholder="分辨率" value="@info.sResolution" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">备注：</label>
                        <div class="col-lg-8">
                            <textarea type="text" class="form-control" name="Comments" id="Comments" rows="5">@info.sComments</textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                        <div class="form-group m20">
                            <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i> 返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>