@using EntFrm.Business.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    DsPublishFlows info = (DsPublishFlows)ViewBag.StackHolder;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

<form class="form-horizontal">
    <div class="wrapper-content">
        <div class="panel-body" style="padding-top:0px;">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">

                    <div class="form-group">
                        <label class="col-lg-3 control-label">任务编号：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="PFlowNo" id="PFlowNo" readonly value="@info.sPFlowNo" placeholder="任务编号" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">节目列表：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="PFlowNo" id="PFlowNo" value="@PageHelper.getProgramInfoNameByNo(info.sProgmNo)" placeholder="节目列表" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">播放类型：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="ProgmType" id="ProgmType" value="@PageHelper.getProgramTypeName(info.sProgmType)" placeholder="播放类型" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">播放方式：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="PlayMode" id="PlayMode" value="@PageHelper.getPlayModeName(info.sPlayMode)" placeholder="播放方式" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="col-lg-3 control-label">设备列表：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="PlayerNos" id="PlayerNos" value="@PageHelper.getPlayerInfoNameByNos(info.sPlayerNos)" placeholder="设备列表" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">播放日期：</label>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" name="StartDate" id="StartDate" value="@info.dStartDate" placeholder="开始日期" />
                        </div>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" name="EnditDate" id="EnditDate" value="@info.dEnditDate" placeholder="结束日期" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">播放周次：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="PlayWeeks" id="PlayWeeks" value="@PageHelper.getWeeksName(info.sPlayWeeks)" placeholder="播放周次" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">播放时间：</label>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" name="StartTime" id="StartTime" value="@info.sStartTime" placeholder="开始时间" />
                        </div>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" name="EnditTime" id="EnditTime" value="@info.sEnditTime" placeholder="结束时间" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">下发时间：</label>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" name="DSchedule" id="DSchedule" value="@info.dPublishDate" placeholder="下发计划时间" />
                        </div>
                        <div class="col-lg-3">
                            &nbsp;
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">备注：</label>
                        <div class="col-lg-8">
                            <textarea type="text" class="form-control" name="Comments" id="Comments" rows="5">@info.sComments</textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                        <div class="form-group m20"> 
                            <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i> 返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>