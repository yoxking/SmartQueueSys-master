
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EncryptIndex</title>
    <script type="text/javascript" src="~/Content/js/jquery.min.js"></script>
    <script type="text/javascript">

        function onEncrypt() {
            var content = $('#txtContent').val();

            $.post(
                "/Home/EncryptText",
                { a: Math.random(), text: content},
                function (data) {
                    $('#txtResult').val(data);
                }
            );
        }

        function onDecrypt() {
            var content = $('#txtContent').val();

            $.post(
                "/Home/DecryptText",
                { a: Math.random(), text: content },
                function (data) {
                    $('#txtResult').val(data);
                }
            );

        }
    </script>
</head>
<body>
    <div>
        <h1>文本加密、解密页面</h1>
        <div>
            <span>请输入文本内容：</span><br />
            <textarea id="txtContent" rows="5" style="width:50%"></textarea><br />
            <input type="button" id="btnEncrypt" value="加密文本" onclick="onEncrypt()" />
            <input type="button" id="btnDecrypt" value="解密文本" onclick="onDecrypt()" /><br /><br />
            <textarea id="txtResult" rows="5" style="width:50%"></textarea>
        </div>
    </div>
</body>
</html>
