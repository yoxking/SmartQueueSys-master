@using EntFrm.Business.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    RegistFlows info = (RegistFlows)ViewBag.StackHolder;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}


    <form class="form-horizontal">
        <div class="wrapper-content">
            <div class="panel-body" style="padding-top:0px;">
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">

                        <div class="form-group">
                            <label class="col-lg-3 control-label">编号：</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" name="RFlowNo" id="RFlowNo" value="@info.sRFlowNo" readonly placeholder="编号" />
                            </div>
                        </div>

                        <div class="clearfix f-hafl">
                            <div class="col-hafl"> 
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">预约服务：</label>
                                    <div class="col-lg-8">
                                        <input class="form-control" name="ServiceNo" id="ServiceNo" value="@PageHelper.getServiceInfoNameByNo(info.sServiceNo)" placeholder="预约服务" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">开始时间：</label>
                                    <div class="col-lg-8">
                                        <input class="form-control" name="StartDate" id="StartDate" value="@info.dStartDate" placeholder="开始时间" />
                                    </div>
                                </div> 
                            </div>

                            <div class="col-hafl">
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">病人：</label>
                                    <div class="col-lg-8">
                                        <input class="form-control" name="RUserNo" id="RUserNo" value="@PageHelper.getRUsersInfoNameByNo(info.sRUserNo)" placeholder="病人编号" />
                                    </div>
                                </div> 
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">预约类型：</label>
                                    <div class="col-lg-8">
                                        <input class="form-control" name="RegistType" id="RegistType" value="@PublicHelper.GetRegisteType(info.iRegistType)" placeholder="来源" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">结束时间：</label>
                                    <div class="col-lg-8">
                                        <input class="form-control" name="EnditDate" id="EnditDate" value="@info.dEnditDate" placeholder="结束时间" />
                                    </div>
                                </div> 
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">备注：</label>
                            <div class="col-lg-8">
                                <textarea type="text" class="form-control" name="Comments" rows="5" id="Comments" >@info.sComments</textarea>
                            </div>
                        </div>

                        <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                            <div class="form-group m20">
                                <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i>返回</button>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </form>

