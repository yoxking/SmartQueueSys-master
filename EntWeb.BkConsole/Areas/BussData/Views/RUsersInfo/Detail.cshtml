@using EntFrm.Business.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    RUsersInfo info = (RUsersInfo)ViewBag.StackHolder;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

<form class="form-horizontal">
    <div class="wrapper-content">
        <div class="panel-body" style="padding-top:0px;">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">

                    <div class="form-group">
                        <label class="col-lg-3 control-label">编号：</label>
                        <div class="col-lg-8"> 
                            <input type="text" class="form-control" name="RUserNo" id="RUserNo" readonly="readonly" value="@info.sRUserNo" placeholder="编号" />
                        </div>
                    </div>

                    <div class="clearfix f-hafl">
                        <div class="col-hafl">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">中文姓名：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="CnName" id="CnName" value="@info.sCnName" placeholder="中文姓名" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">年龄：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input class="form-control" name="Age" id="Age" value="@info.iAge" placeholder="年龄" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">民族：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="Nation" id="Nation" value="@info.sNation" placeholder="民族" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">地址：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="Address" id="Address" value="@info.sAddress" placeholder="地址" />
                                </div>
                            </div>
                        </div>

                        <div class="col-hafl">
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">身份证号：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="IdCardNo" id="IdCardNo" value="@info.sIdCardNo" placeholder="身份证号" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">性别：</label>
                                <div class="col-lg-8" style="text-align:left;">
                                    <input class="form-control" name="Sex" id="Sex" value="@(info.iSex==0?"女":"男")" placeholder="性别" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">电话：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="Telphone" id="Telphone" value="@info.sTelphone" placeholder="电话" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" style="width:29% !important; padding-left:5px; padding-right:5px;">邮编：</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="PostCode" id="PostCode" value="@info.sPostCode" placeholder="邮编" />
                                </div>
                            </div>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-3 control-label">备注：</label>
                        <div class="col-lg-8">
                            <textarea type="text" class="form-control" name="Comments" id="Comments" rows="5" >@info.sComments</textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                        <div class="form-group m20">
                            <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i> 返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

