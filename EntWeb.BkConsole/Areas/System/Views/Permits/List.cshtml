        $(document).ready(function () {

            $("#selectAll").click(function () {
                var ischecked = this.checked;
                $("input:checkbox[name='infosId']").each(function () {
                    if ($(this).attr("disabled") != "disabled") {
                        this.checked = ischecked;
                    }
                });

                
            });

        });

        //点击添加
