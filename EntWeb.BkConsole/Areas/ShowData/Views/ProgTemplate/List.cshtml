@using EntFrm.Business.Model;
@using EntFrm.Business.Model.Collections;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "节目模板管理";

    DsProgramInfoCollections infoList = (DsProgramInfoCollections)ViewBag.StackHolder["infoList"];
    DsProgramClassCollections classList = (DsProgramClassCollections)ViewBag.ClassList;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#selectAll").click(function () {
                var ischecked = this.checked;
                $("input:checkbox[name='infosId']").each(function () {
                    if ($(this).attr("disabled") != "disabled") {
                        this.checked = ischecked;
                    }
                });

                
            });

        }); 

        //点击添加
        function addnew() {
            dig.addModel('添加模板信息', '/ShowData/ProgTemplate/Add', 890, 550, function () {
                if (this.returnValue == 'Success') {
                    location.reload();
                }
            });
        }

        //点击修改
        function update(n) {
            dig.addModel('编辑模板信息', '/ShowData/ProgTemplate/Edit/' + n, 890, 550,function () {
                if (this.returnValue == 'Success') {
                    location.reload();
                }
            });
        } 

        function untemplate(n) {

            $.post('/ShowData/ProgTemplate/Untemplate?id=' + n, '', function (result) {
                if (result.Status == 'Success') {
                    location.reload();
                } else {
                    dig.alertError('提示', resul.Message);
                }
            }, 'json');
        }

        //点击查看
        function detail(n) {
            dig.addModel('查看模板信息', '/ShowData/ProgTemplate/Detail/' + n, 890, 550,function () {
            });
        }

        function deletes() {
            var msg = "你确定要删除勾选的记录吗?";
            dig.confirm('删除操作', msg, function () {
                var result = "";
                $("input:checkbox[name='infosId']").each(function () {
                    if (this.checked) {
                        result += this.value + ";"
                    }
                });

                if (result == "") {
                    dig.alertError("提示", "请选择要删除的记录！");
                } else {
                    result = result.substring(0, result.length - 1);

                    $.post('/ShowData/ProgTemplate/Delete?ids=' + result, '', function (result) {
                        if (result.Status == 'Success') {
                            location.reload();
                        } else {
                            dig.alertError('提示', resul.Message);
                        }
                    }, 'json');
                }
            });
        }
    </script>
}

<div class="row col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">
        <div class="ibox">
            <div class="ibox-title">
                <h5>节目模板管理</h5>
                <div class="ibox-tools rboor"> 
                    <a class="btn btn-primary btn-xs p310" id="addnew" onclick="addnew();"><i class="im-plus"></i> 新增模板</a>
                    <a class="btn btn-primary btn-xs p310" id="deletes" onclick="deletes();"><i class="im-remove4"></i> 模板删除</a>
                </div>
            </div>
            <div class="ibox-content">
                <!-- search star -->
                @using (Html.BeginForm("Search", "ProgramInfo", FormMethod.Post))
                {
                    <div class="form-horizontal clearfix">
                        <div class="col-lg-4 col-sm-3 pl0" style="width:50%;">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">节目分类：</label>
                                <div class="col-lg-8">
                                    <select class="form-control" name="PClassNo" id="PClassNo">
                                        <option value="00000000">所有分类</option>
                                        @if (classList != null && classList.Count > 0)
                                        {
                                            foreach (DsProgramClass m in classList)
                                            {
                                                <option value="@m.sClassNo">@m.sClassName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-4" style="float:right;">
                            <div class="form-group">
                                <div class="col-lg-12 col-sm-12 input-group">
                                    @Html.TextBox("Keyword", null, new { @class = "input-sm form-control", @placeholder = "请输入查询关键词" })
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-sm btn-primary"> 搜索</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- search end -->
                <div class="divider"></div><br />
                <div id="example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <table id="example" class="table table-striped table-bordered table-hover dataTables-example dataTable" cellspacing="0" style="width:100%;">
                        <thead>
                            <tr>
                                <th class="tn" style="padding: 10px 5px !important;width:50px !important;"><input id="selectAll" name="selectAll" type="checkbox" value=""></th>
                                <th width="300">节目名称</th>
                                <th width="120">分类</th>
                                <th width="100">分辨率</th>
                                <th width="80">状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (null == infoList || infoList.Count < 1)
                            {
                                <tr>
                                    <td colspan="6">暂无信息</td>
                                </tr>
                            }
                            else
                            {
                                foreach (DsProgramInfo m in infoList)
                                {
                                    <tr>
                                        <td class="tn">
                                            <input type="checkbox" name="infosId" @if(m.iCheckState == 1){ <text>disabled</text>} value="@m.sProgmNo" />
                                        </td> 
                                        <td>
                                            @m.sProgmName
                                        </td>
                                        <td>
                                            @PageHelper.getProgramClassNameByNo(m.sPClassNo)
                                        </td>
                                        <td>
                                            @m.sResolution
                                        </td>  
                                        <td style="color:red;">
                                            @(m.iCheckState==0? "未审核" : "已审核")
                                        </td>
                                        <td>
                                            <a class="btn btn-primary btn-xs p310" id="design"  href="/DesignWeb/#/Design?id=@m.sProgmNo" target="_blank" @if (m.iCheckState == 1) { <text> style="display:none;" </text> }><i class="im-pencil2"></i> 制作节目</a>
                                            <a class="btn btn-primary btn-xs p310" id="untemplate" onclick="untemplate(@m.sProgmNo)" @if (m.iCheckState == 1) { <text> style="display:none;" </text> }><i class="im-pencil2"></i> 取消模板</a>
                                            <a class="btn btn-primary btn-xs p310" id="update" onclick="update(@m.sProgmNo)" @if (m.iCheckState == 1) { <text> style="display:none;" </text> }><i class="im-pencil2"></i> 编辑节目</a>
                                            <a class="btn btn-primary btn-xs p310" id="detail" onclick="detail(@m.sProgmNo)"><i class="im-pencil2"></i> 详细</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!-- page -->
                    <div class="bottom">
                        @Html.Partial("_Paging")
                    </div>
                    <!-- page -->
                </div>
            </div>
        </div>
    </div>
</div>

