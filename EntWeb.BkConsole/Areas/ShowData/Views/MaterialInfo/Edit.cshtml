@using EntFrm.Business.Model;
@using EntFrm.Business.Model.Collections;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    DsMaterialInfo info = (DsMaterialInfo)ViewBag.StackHolder;
    DsMaterialClassCollections classList=(DsMaterialClassCollections)ViewBag.ClassList;
}

@section PageSpecificStyleSheetIncludes{
    <link rel="stylesheet" href="~/Content/layui/css/layui.css">
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script src="~/Content/layui/layui.js"></script> 
    <script type="text/javascript">
        $(document).ready(function () {

            layui.use('upload', function () {
                var upload = layui.upload;

                //执行实例
                var uploadInst = upload.render({
                    elem: '#ppicture' //绑定元素
                    , url: '/Handle/UploadMaterial' //上传接口
                    , type: 'post' //默认post
                    , done: function (res) {
                        //上传完毕回调
                        if (res.code == 0) {

                            $("#FilePath").val(res.data.src);
                            $("#FilePath2").html(res.data.src);
                        }
                        else {
                            dig.alertError('提示', res.msg);
                        }
                    }
                    , accept: 'file'
                    , error: function (res) {
                        //请求异常回调
                        dig.alertError('提示', res.message);
                    }
                });
            });
        });
    </script>
}

@using (Ajax.BeginForm("Save", null, new AjaxOptions()
{
    HttpMethod = "Post",
    OnBegin = "SubAjax.Loading",
    OnComplete = "SubAjax.Complate",
    OnFailure = "SubAjax.Failure",
    OnSuccess = "SubAjax.Success"
},
new { @class = "form-horizontal dig-from", @role = "form" }))
{
    <div class="wrapper-content">
        <div class="panel-body" style="padding-top:0px;">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">

                    <div class="form-group">
                        <label class="col-lg-3 control-label">素材编号：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="MatNo" readonly id="MatNo" value="@info.sMatNo" placeholder="编号" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">素材名称：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="MatName" id="MatName" value="@info.sMatName" placeholder="素材名称" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">素材类型：</label>
                        <div class="col-lg-8">
                            <select class="form-control" name="MClassNo" id="MClassNo">
                                @if (classList != null && classList.Count > 0)
                                {
                                    foreach(DsMaterialClass m in classList)
                                    {
                                        <option value="@m.sClassNo" @if (m.sClassNo.Equals(info.sMClassNo)) { <text>selected</text> } >@m.sClassName</option>
                                    }
                                }
                                else
                                {
                                   <option value="00000000">无</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">上传素材：</label>
                        <div class="col-lg-8">
                            <input type="hidden" name="FilePath" id="FilePath" value="@info.sFilePath" />
                            <button type="button" class="layui-btn" id="ppicture">
                                <i class="layui-icon">&#xe67c;</i>上传素材
                            </button>
                            <div id="FilePath2">@info.sFilePath</div>  
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">是否模板：</label>
                        <div class="col-lg-8">
                            <select class="form-control" name="IsTemplate" id="IsTemplate">
                                <option  value="0" >否</option>
                                <option value="1" >是</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">备注：</label>
                        <div class="col-lg-8">
                            <textarea type="text" class="form-control" name="Comments" id="Comments" rows="5">@info.sComments</textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                        <div class="form-group m20">
                            <button class="btn btn-primary btn-save" type="submit"><i class="fa fa-check"></i> <span>保存</span></button>
                            <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i> 返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

