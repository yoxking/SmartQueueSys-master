@using EntFrm.Business.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";

    DsHrtbeatFlows info = (DsHrtbeatFlows)ViewBag.StackHolder;
}

@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        body {
            background-color: white;
        }

        .changeicon {
            float: right;
            margin-right: -15px;
            position: absolute;
            right: -7px;
            top: 0px;
            border: none;
            background-color: #18a689;
            color: #FFFFFF;
            line-height: 33px;
            height: 33px;
        }
    </style>
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}

<form class="form-horizontal">
    <div class="wrapper-content">
        <div class="panel-body" style="padding-top:0px;">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">

                    <div class="form-group">
                        <label class="col-lg-3 control-label">编号：</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" name="DFlowNo" id="DFlowNo" value="@info.sBFlowNo" placeholder="编号" readonly="readonly" />
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-3 control-label">设备名称：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="ProgmNo" id="ProgmNo" placeholder="设备名称" value="@PageHelper.getPlayerInfoNameByCode(info.sPlayerCode)"  />
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-3 control-label">IP地址：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="PlayerNo" id="PlayerNo" placeholder="地址" value="@info.sIpAddress"  />
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">端口：</label>
                            <div class="col-lg-8">
                                <input class="form-control" name="DSchedule" id="DSchedule" placeholder="端口" value="@info.iLocalPort"  />
                            </div>
                        </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">心跳时间：</label>
                        <div class="col-lg-8">
                            <input class="form-control" name="DloadHits" id="DloadHits" placeholder="心跳时间" value="@info.dRegistDate.ToString()"  />
                        </div>
                    </div> 
                        <div class="form-group">
                            <label class="col-lg-3 control-label">备注：</label>
                            <div class="col-lg-8">
                                <textarea type="text" class="form-control" name="Comments" id="Comments" rows="5" >@info.sComments</textarea>
                            </div>
                        </div>
                        <div class="hr-line-dashed" style="display: table;margin-left: auto;margin-right: auto;">
                            <div class="form-group m20">
                                <button class="btn btn-warning" id="btn-dig-close" type="button"><i class="im-undo2"></i> 返回</button>
                            </div>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</form>