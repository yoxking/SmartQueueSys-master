@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>广域软件系统管理信息系统--导航页</title>
    <link href="/Content/themes/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/themes/css/login.css" rel="stylesheet" type="text/css" />
    <script src="/Content/js/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        function redirect() {
            var ret = $('#redirect').val();
            if (ret!='') {
                location.href = ret;
            } else {
                location.href = "/";
            }
        }
        $(function () {
            function jump(count) {
                window.setTimeout(function () {
                    count--;
                    if (count > 0) {
                        $('#c_time').html(count);
                        jump(count);
                    } else {
                        redirect();
                    }
                }, 1000);
            }
            jump(10);
        });
    </script>
</head>
<body>
    @Html.Hidden("redirect", ViewData["backurl"])
    <div class="container">
            <div class="form-signin-heading text-center" style="margin-top:50px;margin-left:auto; margin-right:auto;">
                <img src="/Content/themes/images/logo.gif" alt="" style="background-color:#ffffff; border-bottom:1px dashed #808080;">
            </div>
        <div class="text-center" style="margin: 0px auto; color: #1ab394; font-size:16px; font-family: 微软雅黑,'\5FAE\8F6F\96C5\9ED1',Tahoma,Verdana,'Helvetica Neue',Helvetica,Arial,sans-serif; padding: 10px; width: 800px; background-color: #ffffff; height: 380px; ">
           <h4 style="margin-top: 0px;">禁止登录导航</h4>
            <div style="border: 1px solid #ffffff; width: 600px;margin:0px auto;">
                系统禁止您登录，请联系系统管理员，系统管理员将解决您的问题；
                倒计时10秒后，将跳转原始网页，您也可以点击下方的“点击返回原网页”进行返回；
            </div>
            <div style="border: 1px solid #1ab394; font-size: 36px; font-weight: 600; padding-top: 70px; width: 200px; -webkit-border-radius: 100px; border-radius: 100px; -moz-border-radius: 100px; height: 200px; margin: 15px auto; text-align: center; ">
              <span id="c_time">10</span>
            </div>
            <h3 style="position: absolute; margin-left: 300px; top: 450px !important;"><a href="javascript:redirect()" style="color: #1ab394;">点击返回原网页</a></h3>
        </div>
    </div>

    <div class="log_foot">
        <div class="log_fback"><p>Copyright © <a href="javascript:void(0)" target="_blank">济南广域软件有限公司</a></p></div>
    </div>
  
</body>
</html>

